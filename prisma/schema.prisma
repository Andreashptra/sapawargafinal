generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Level {
  id        Int      @id @default(autoincrement())
  name      String
  users     User[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("level")
}

model User {
  id          Int        @id @default(autoincrement())
  officerName String     @map("officer_name")
  email       String     @unique
  username    String     @unique
  password    String
  phoneNumber String     @map("phone_number")
  photo       String?
  levelId     Int?       @map("level_id")
  level       Level?     @relation(fields: [levelId], references: [id], onDelete: Cascade)
  responses   Response[]
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  @@map("users")
}

model Society {
  id          Int         @id @default(autoincrement())
  nik         String
  name        String
  username    String      @unique
  email       String?
  password    String
  phoneNumber String      @map("phone_number")
  address     String
  photo       String
  complaints  Complaint[]
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  @@map("society")
}

model Complaint {
  id                  Int        @id @default(autoincrement())
  dateComplaint       DateTime   @map("date_complaint")
  nik                 String
  contentsOfTheReport String     @map("contents_of_the_report") @db.Text
  photo               String
  status              String     @default("0") // 0 = pending, process, finished
  societyId           Int?       @map("society_id")
  society             Society?   @relation(fields: [societyId], references: [id], onDelete: Cascade)
  response            Response?
  createdAt           DateTime   @default(now()) @map("created_at")
  updatedAt           DateTime   @updatedAt @map("updated_at")

  @@map("complaint")
}

model Response {
  id           Int       @id @default(autoincrement())
  complaintId  Int       @unique @map("complaint_id")
  complaint    Complaint @relation(fields: [complaintId], references: [id], onDelete: Cascade)
  responseDate DateTime? @map("response_date")
  response     String?   @db.Text
  userId       Int?      @map("user_id")
  user         User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  @@map("response")
}
